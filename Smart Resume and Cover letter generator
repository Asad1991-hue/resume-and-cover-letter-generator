    <script>
        // Mobile menu toggle
        document.querySelector('.mobile-menu-btn').addEventListener('click', function() {
            document.getElementById('main-nav').classList.toggle('active');
        });

        // Form to Preview Updates - Resume
        const resumeForm = document.getElementById('resume-form');
        const previewFields = {
            name: ['first-name', 'last-name'],
            profession: ['profession'],
            contact: ['email', 'phone', 'address'],
            summary: ['summary'],
            skills: ['skills'],
            certifications: ['certifications'],
            languages: ['languages']
        };

        // Update preview when form changes
        resumeForm.addEventListener('input', function(e) {
            updateResumePreview();
        });

        function updateResumePreview() {
            // Update name
            const firstName = document.getElementById('first-name').value || 'Your';
            const lastName = document.getElementById('last-name').value || 'Name';
            document.getElementById('preview-name').textContent = `${firstName} ${lastName}`;

            // Update profession
            document.getElementById('preview-profession').textContent = 
                document.getElementById('profession').value || 'Your Profession';

            // Update contact info
            const email = document.getElementById('email').value || 'email@example.com';
            const phone = document.getElementById('phone').value || '(123) 456-7890';
            const address = document.getElementById('address').value || 'Your Address';
            document.getElementById('preview-contact').textContent = `${email} | ${phone} | ${address}`;

            // Update summary
            document.getElementById('preview-summary').textContent = 
                document.getElementById('summary').value || 'Experienced professional with a proven track record in [your field]. Skilled in [key skills] with [number] years of experience. Adept at [key responsibilities] with a passion for [relevant interest].';

            // Update skills
            const skills = document.getElementById('skills').value || 'Skill 1, Skill 2, Skill 3';
            document.getElementById('preview-skills').innerHTML = skills.split(',').map(skill => `<li>${skill.trim()}</li>`).join('');

            // Update certifications
            const certs = document.getElementById('certifications').value || 'Certification 1\nCertification 2';
            document.getElementById('preview-certifications').innerHTML = certs.split('\n').filter(c => c.trim()).map(cert => `<li>${cert.trim()}</li>`).join('');

            // Update languages
            const langs = document.getElementById('languages').value || 'Language 1 (Proficiency)\nLanguage 2 (Proficiency)';
            document.getElementById('preview-languages').innerHTML = langs.split('\n').filter(l => l.trim()).map(lang => `<li>${lang.trim()}</li>`).join('');

            // Update experience (simplified for this example)
            // In a full implementation, you would dynamically add/remove experience items
            const jobTitle = document.getElementById('job-title-1').value || 'Job Title';
            const company = document.getElementById('company-1').value || 'Company Name';
            const startDate = document.getElementById('start-date-1').value || 'Start Date';
            const endDate = document.getElementById('end-date-1').value || 'End Date';
            const jobDesc = document.getElementById('job-description-1').value || 'Job description and key achievements';

            document.getElementById('preview-experience').innerHTML = `
                <div class="resume-item">
                    <div class="resume-item-header">
                        <h4>${jobTitle}</h4>
                        <span class="date">${formatDate(startDate)} - ${formatDate(endDate)}</span>
                    </div>
                    <p><em>${company}</em></p>
                    <ul>
                        ${jobDesc.split('\n').filter(item => item.trim()).map(item => `<li>${item.trim()}</li>`).join('')}
                    </ul>
                </div>
            `;

            // Update education
            const degree = document.getElementById('degree-1').value || 'Degree';
            const institution = document.getElementById('institution-1').value || 'Institution Name';
            const eduStart = document.getElementById('education-start-1').value || 'Start Date';
            const eduEnd = document.getElementById('education-end-1').value || 'End Date';

            document.getElementById('preview-education').innerHTML = `
                <div class="resume-item">
                    <div class="resume-item-header">
                        <h4>${degree}</h4>
                        <span class="date">${formatDate(eduStart)} - ${formatDate(eduEnd)}</span>
                    </div>
                    <p><em>${institution}</em></p>
                </div>
            `;
        }

        function formatDate(dateString) {
            if (!dateString) return 'Present';
            const date = new Date(dateString);
            if (isNaN(date.getTime())) return dateString;
            return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short' });
        }

        // Add more experience fields
        let experienceCount = 1;
        document.getElementById('add-experience').addEventListener('click', function() {
            experienceCount++;
            const newExperience = document.createElement('div');
            newExperience.className = 'experience-item';
            newExperience.innerHTML = `
                <div class="form-row">
                    <div class="form-group">
                        <label for="job-title-${experienceCount}">Job Title</label>
                        <input type="text" id="job-title-${experienceCount}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="company-${experienceCount}">Company</label>
                        <input type="text" id="company-${experienceCount}" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="start-date-${experienceCount}">Start Date</label>
                        <input type="month" id="start-date-${experienceCount}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="end-date-${experienceCount}">End Date</label>
                        <input type="month" id="end-date-${experienceCount}" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="job-description-${experienceCount}">Description</label>
                    <textarea id="job-description-${experienceCount}" class="form-control" rows="3"></textarea>
                </div>
                <button type="button" class="btn btn-remove" style="background-color: var(--accent-color);">Remove This Position</button>
            `;
            document.getElementById('experience-fields').appendChild(newExperience);
            
            // Add event listener to the new remove button
            newExperience.querySelector('.btn-remove').addEventListener('click', function() {
                newExperience.remove();
            });
        });

        // Add more education fields
        let educationCount = 1;
        document.getElementById('add-education').addEventListener('click', function() {
            educationCount++;
            const newEducation = document.createElement('div');
            newEducation.className = 'education-item';
            newEducation.innerHTML = `
                <div class="form-row">
                    <div class="form-group">
                        <label for="degree-${educationCount}">Degree</label>
                        <input type="text" id="degree-${educationCount}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="institution-${educationCount}">Institution</label>
                        <input type="text" id="institution-${educationCount}" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="education-start-${educationCount}">Start Date</label>
                        <input type="month" id="education-start-${educationCount}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="education-end-${educationCount}">End Date</label>
                        <input type="month" id="education-end-${educationCount}" class="form-control">
                    </div>
                </div>
                <button type="button" class="btn btn-remove" style="background-color: var(--accent-color);">Remove This Education</button>
            `;
            document.getElementById('education-fields').appendChild(newEducation);
            
            // Add event listener to the new remove button
            newEducation.querySelector('.btn-remove').addEventListener('click', function() {
                newEducation.remove();
            });
        });

        // Reset resume form
        document.getElementById('reset-form').addEventListener('click', function() {
            if (confirm('Are you sure you want to reset all resume information?')) {
                resumeForm.reset();
                updateResumePreview();
            }
        });

        // Cover Letter Form Updates
        const coverLetterForm = document.getElementById('cover-letter-form');
        coverLetterForm.addEventListener('input', function() {
            updateCoverLetterPreview();
        });

        function updateCoverLetterPreview() {
            // Update date
            const today = new Date();
            document.getElementById('cl-preview-date').textContent = today.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            });

            // Update hiring manager
            const hiringManager = document.getElementById('cl-hiring-manager').value || 'Hiring Manager';
            document.getElementById('cl-preview-hiring-manager').textContent = hiringManager;

            // Update company info
            const company = document.getElementById('cl-company').value || 'Company Name';
            document.getElementById('cl-preview-company').textContent = company;
            document.getElementById('cl-preview-address').textContent = 'Company Address';

            // Update salutation
            document.getElementById('cl-preview-salutation').textContent = 
                hiringManager ? `Dear ${hiringManager},` : 'Dear Hiring Manager,';

            // Update content
            document.getElementById('cl-preview-intro').textContent = 
                document.getElementById('cl-intro').value || '[Introduction paragraph expressing your interest in the position and briefly introducing yourself.]';

            document.getElementById('cl-preview-body').textContent = 
                document.getElementById('cl-body').value || '[Body paragraph(s) highlighting your relevant skills, experiences, and achievements that make you a strong candidate for the position.]';

            document.getElementById('cl-preview-closing').textContent = 
                document.getElementById('cl-closing').value || '[Closing paragraph expressing your enthusiasm for the opportunity, mentioning follow-up, and thanking the reader for their time and consideration.]';

            // Update signature
            document.getElementById('cl-preview-signature').textContent = 
                document.getElementById('cl-signature').value || 'Sincerely,';

            document.getElementById('cl-preview-your-name').textContent = 
                document.getElementById('cl-your-name').value || 'Your Name';

            document.getElementById('cl-preview-contact-info').textContent = 
                document.getElementById('cl-contact-info').value || 'Your Contact Information';
        }

        // Reset cover letter form
        document.getElementById('reset-cl-form').addEventListener('click', function() {
            if (confirm('Are you sure you want to reset all cover letter information?')) {
                coverLetterForm.reset();
                updateCoverLetterPreview();
            }
        });

        // Template selector - this would change styles in a full implementation
        document.getElementById('template-selector').addEventListener('change', function() {
            // In a full implementation, this would change the resume template
            console.log('Selected template:', this.value);
        });

        document.getElementById('cl-template-selector').addEventListener('change', function() {
            // In a full implementation, this would change the cover letter template
            console.log('Selected CL template:', this.value);
        });

        // Download buttons - these would generate PDFs in a full implementation
        document.getElementById('download-resume').addEventListener('click', function() {
            alert('In a full implementation, this would generate and download a PDF resume');
            // This would use a library like jsPDF or html2pdf.js
        });

        document.getElementById('download-cover-letter').addEventListener('click', function() {
            alert('In a full implementation, this would generate and download a PDF cover letter');
            // This would use a library like jsPDF or html2pdf.js
        });

        // Initialize previews
        updateResumePreview();
        updateCoverLetterPreview();
    </script>
